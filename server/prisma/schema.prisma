// SQLite database for development/testing
// provider could be postgresql in production
 datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
 }

 generator client {
  provider = "prisma-client-js"
 }

model User {
  id           Int      @id @default(autoincrement())
  email        String?  @unique
  passwordHash String?
  telegramId   BigInt?  @unique
  firstName    String?
  lastName     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

