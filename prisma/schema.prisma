datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  uuid         String   @unique
  role         Role     @default(USER)
  Vpn          Vpn[]
}

model Vpn {
  id        String    @id @default(cuid())
  name      String
  ownerId   String
  status    VpnStatus @default(OFFLINE)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  owner     User      @relation(fields: [ownerId], references: [id])
  Job       Job[]
}

enum VpnStatus {
  ONLINE
  OFFLINE
  WARNING
  PENDING
}

model Job {
  id        String   @id @default(cuid())
  vpnId     String
  type      String
  status    String
  output    String?
  createdAt DateTime @default(now())
  vpn       Vpn      @relation(fields: [vpnId], references: [id])
}
